  <div class="confetti" id="confetti"></div>

  <script>
    const playBtn = document.getElementById('playBtn');
    const copyBtn = document.getElementById('copyBtn');
    const messageBox = document.getElementById('messageBox');
    const confetti = document.getElementById('confetti');

    function makePiece(x){
      const el = document.createElement('div');
      el.className = 'piece';
      el.style.left = x + '%';
      el.style.background = `hsl(${Math.random()*360} 90% 60%)`;
      el.style.transform = `translateY(${ -10 - Math.random()*10 }vh) rotate(${Math.random()*360}deg)`;
      confetti.appendChild(el);

      // animate
      const fall = el.animate([
        { transform: el.style.transform, opacity:0 },
        { transform: `translateY(${100 + Math.random()*50}vh) rotate(${Math.random()*1080}deg)`, opacity:1 }
      ], { duration: 1600 + Math.random()*900, easing: 'cubic-bezier(.2,.8,.2,1)'});

      fall.onfinish = ()=> el.remove();
    }

    function burst(){
      for(let i=0;i<40;i++){
        setTimeout(()=> makePiece(Math.random()*100), i*8);
      }
    }

    playBtn.addEventListener('click', ()=>{
      messageBox.classList.remove('hidden');
      setTimeout(()=> messageBox.classList.add('show'), 10);
      burst();
    });

    copyBtn.addEventListener('click', async ()=>{
      const text = 'I LOVE YOU BABY ODING';
      try{
        await navigator.clipboard.writeText(text);
        copyBtn.textContent = 'Copied!';
        setTimeout(()=> copyBtn.textContent = 'Copy message', 1400);
      }catch(e){
        alert('Copy failed â€” select and copy manually: ' + text);
      }
    });

    // Auto-run on load for a sweet surprise
    window.addEventListener('load', ()=>{
      setTimeout(()=>{ playBtn.click(); }, 600);
    });
  </script>
</body>
