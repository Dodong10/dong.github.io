    .card{width:min(920px,95%);padding:36px;border-radius:20px;background:linear-gradient(180deg,rgba(255,255,255,0.03),rgba(0,0,0,0.04));box-shadow:0 10px 30px rgba(2,6,23,0.6);backdrop-filter: blur(6px);text-align:center}
    h1{font-size:clamp(28px,6vw,64px);margin:10px 0 8px;letter-spacing:1px}
